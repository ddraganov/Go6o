@model UiControl

<div class="text-center" style="min-height:500px;">
    @if (Model.NoSeaSide == "A")
    {
        <div class="card custom-card">
            <img src="~/pics/Sofia/@(Model.Sofia).jpg" class="card-img-top" alt="Sofia">
            <div class="card-body">
                <h5 class="card-title">Sofia</h5>
                <p class="card-text">Capital and largest city of Bulgaria. The city is at the foot of Vitosha Mountain</p>
                @Html.ActionLink("See more", "Sofia", "Home", new { burgas = Model.Burgas, varna = Model.Varna, sofia = Model.Sofia, plovdiv = Model.Sofia, seaside = Model.SeaSide, noseaside = Model.NoSeaSide }, new { @class = "btn btn-primary" })
            </div>
        </div>
    }
    else
    {
        <div class="card custom-card">
            <img src="~/pics/Plovdiv/@(Model.Plovdiv).jpg" class="card-img-top" alt="Plovdiv">
            <div class="card-body">
                <h5 class="card-title">Plovdiv</h5>
                <p class="card-text">The second-largest city in Bulgaria and the culture capital of Bulgaria</p>
                @Html.ActionLink("See more", "Plovdiv", "Home", new { burgas = Model.Burgas, varna = Model.Varna, sofia = Model.Sofia, plovdiv = Model.Sofia, seaside = Model.SeaSide, noseaside = Model.NoSeaSide }, new { @class = "btn btn-primary" })
            </div>
        </div>
    }

    @if (Model.SeaSide == "A")
    {
        <div class="card custom-card">
            <img src="~/pics/Varna/@(Model.Varna).jpg" class="card-img-top" alt="Varna">
            <div class="card-body">
                <h5 class="card-title">Varna</h5>
                <p class="card-text">The third largest city in Bulgaria and the largest city and seaside resort on the Bulgarian Black Sea Coast</p>
                @Html.ActionLink("See more", "Varna", "Home", new { burgas = Model.Burgas, varna = Model.Varna, sofia = Model.Sofia, plovdiv = Model.Sofia, seaside = Model.SeaSide, noseaside = Model.NoSeaSide }, new { @class = "btn btn-primary" })
            </div>
        </div>
    }
    else
    {
        <div class="card custom-card">
            <img src="~/pics/Burgas/@(Model.Burgas).jpg" class="card-img-top" alt="Burgas">
            <div class="card-body">
                <h5 class="card-title">Burgas</h5>
                <p class="card-text">The second largest city on the Bulgarian Black Sea Coast and the fourth-largest in Bulgaria</p>
                @Html.ActionLink("See more", "Burgas", "Home", new { burgas = Model.Burgas, varna = Model.Varna, sofia = Model.Sofia, plovdiv = Model.Sofia, seaside = Model.SeaSide, noseaside = Model.NoSeaSide }, new { @class = "btn btn-primary" })
            </div>
        </div>
    }
</div>

@section Scripts {

    <script>
        var myModel = JSON.parse('@Html.Raw(Model.ToString())');
    </script>
}